{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "workspace.library": [
    "~/.hammerspoon/Spoons/EmmyLua.spoon/annotations",
    "/opt/homebrew/share/lua/5.4/",
    "utils/"
  ],
  "runtime.version": "Lua 5.4",
  "runtime.path": ["/opt/homebrew/share/lua/5.4/?.lua", "utils/?.lua"],
  "hint.enable": true,
  "format.enable": true,
  "format.defaultConfig": {
    "indent_style": "space",
    "max_line_length": "120",
    "indent_size": "2",
    "space_before_function_open_parenthesis": "true"
  },
  "signatureHelp.enable": false
}
